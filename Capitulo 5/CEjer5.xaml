<Window x:Class="Cap4ycap5.Capitulo_5.CEjer5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap4ycap5.Capitulo_5"
        mc:Ignorable="d"
        Title="CEjer5" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Ingrese un numero del 1 al 10: "/>
                <TextBox x:Name="Numero" Width="50" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="Calcular" Content="Calcular"  Width="50" Click="Calcular_Click"/>
                <TextBox x:Name="Resultado" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
