<Window x:Class="Cap4ycap5.Capitulo_5.CEjer4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap4ycap5.Capitulo_5"
        mc:Ignorable="d"
        Title="CEjer4" Height="170" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Numero: "/>
                <TextBox x:Name="Numero" Width="90" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Factorial: "/>
                <TextBox x:Name="Factorial" Width="90" />
            </StackPanel>
            <Button Content="Calcular" Width="40" Margin="0,10,130,0" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
