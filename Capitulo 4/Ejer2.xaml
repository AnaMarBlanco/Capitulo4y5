<Window x:Class="Cap4ycap5.Capitulo_4.Ejer2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap4ycap5.Capitulo_4"
        mc:Ignorable="d"
        Title="Ejer4" Height="250" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,30,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Base: "/>
                <TextBox x:Name="Base" Width="126"/>
                <Label Content="Exponente"/>
                <TextBox x:Name= "Exponente" Width="126"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="Calcular" Content="Calcular" Click="Calcular_Click"/>
                <TextBox x:Name="Resultado" Width="80" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
